<?xml version="1.0" encoding="UTF-8"?>
<dialogBase:DialogBase xmlns="http://xamarin.com/schemas/2014/forms" 
                       xmlns:dialogBase="clr-namespace:XamF.CustomControlls.CustomDialogs.Dialogs.Base"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasquetballCount.CustomControlls.CustomDialogs.Dialogs.ConfirmationDialog">
    <dialogBase:DialogBase.ActionsPlaceHolder>
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button  x:Name="btnNo"  HorizontalOptions="EndAndExpand" BackgroundColor="Transparent" FontSize="Small"/>
            <Button  x:Name="btnYes"  HorizontalOptions="End" BackgroundColor="Transparent" FontSize="Small"/>
        </StackLayout>
    </dialogBase:DialogBase.ActionsPlaceHolder>
</dialogBase:DialogBase>